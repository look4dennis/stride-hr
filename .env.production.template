# StrideHR Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DB_HOST=mysql
DB_NAME=StrideHR
DB_USER=stridehr_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_PORT=3306
MYSQL_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD
MYSQL_DATABASE=StrideHR
MYSQL_USER=stridehr_user
MYSQL_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis Configuration
REDIS_CONNECTION_STRING=redis:6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# JWT Configuration
JWT_SECRET_KEY=CHANGE_ME_JWT_SECRET_KEY_AT_LEAST_64_CHARACTERS_LONG_FOR_PRODUCTION
JWT_ISSUER=StrideHR-Production
JWT_AUDIENCE=StrideHR-Users-Production

# Encryption Configuration
ENCRYPTION_MASTER_KEY=CHANGE_ME_ENCRYPTION_KEY_AT_LEAST_32_CHARACTERS_LONG
ENCRYPTION_SALT=CHANGE_ME_ENCRYPTION_SALT_16_CHARACTERS

# Application URLs
FRONTEND_URL=https://your-domain.com
API_URL=https://api.your-domain.com
ALLOWED_HOSTS=your-domain.com,api.your-domain.com

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-email@your-domain.com
SMTP_PASSWORD=CHANGE_ME_EMAIL_PASSWORD
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME=StrideHR System

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=CHANGE_ME_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_AWS_SECRET_KEY
AWS_REGION=us-east-1

# Security Configuration
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT_SECONDS=30
DATABASE_CONNECTION_POOL_SIZE=20

# Feature Flags
ENABLE_SWAGGER_IN_PRODUCTION=false
ENABLE_DETAILED_ERRORS=false
ENABLE_PERFORMANCE_COUNTERS=true